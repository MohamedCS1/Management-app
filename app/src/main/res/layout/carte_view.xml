<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2pt"
        android:background="@drawable/background_list_view"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2pt"
            android:layout_weight="0"
            android:background="@drawable/listviewinnerbackground"
            android:foreground="@drawable/ripple_effect"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4pt"
                android:layout_marginTop="2pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c_NARM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3pt"
                    android:layout_weight="0"
                    android:text="أمينة "
                    android:textColor="@color/black"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/c_PARM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:autoText="false"
                    android:paddingLeft="3pt"
                    android:paddingRight="3pt"
                    android:text="معمر"
                    android:textColor="@color/black"
                    android:textSize="10pt"
                    app:autoSizeTextType="none" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="الأرملة :"
                    android:textColor="#0041EA"
                    android:textSize="10pt" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/woman3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="4pt"
                android:layout_marginTop="3pt"
                android:layout_marginRight="3pt"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:id="@+id/c_NZWJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3pt"
                    android:layout_weight="0"
                    android:text="جمال"
                    android:textColor="@color/black"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/c_PZWJ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="حمدوش"
                    android:textColor="@color/black"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="زوجة :"
                    android:textColor="#0041EA"
                    android:textSize="10pt" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ico_male" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginTop="5pt"
                android:layout_marginRight="3pt"
                android:layout_marginBottom="2pt"
                android:layout_weight="1"
                android:gravity="right|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c_CHMF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="12"
                    android:textColor="@color/black"
                    android:textSize="10pt" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="عدد الأولاد :"
                    android:textColor="#0041EA"
                    android:textSize="10pt" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/users_crowd" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>