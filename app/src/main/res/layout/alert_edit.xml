<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:src="@drawable/triangle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:background="#ff8882"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2pt"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:paddingTop="9pt"
                    android:paddingRight="4pt"
                    android:text="هل قمت بتعدل معلومات هذه الأرملة؟ "
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="105pt"
                    android:layout_height="1.5pt"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="#ff8882" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="6pt">

                    <TextView
                        android:id="@+id/Al_NARM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="3pt"
                        android:paddingRight="3pt"
                        android:text="Maria"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingRight="3pt"
                        android:text="الإسم:"
                        android:textColor="#0041EA"
                        android:textSize="24sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:paddingTop="3pt">

                    <TextView
                        android:id="@+id/Al_PARM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingLeft="3pt"
                        android:paddingRight="3pt"
                        android:text="Bentwat"
                        android:textColor="#000000"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:paddingRight="3pt"
                        android:text="اللقب:"
                        android:textColor="#0041EA"
                        android:textSize="24sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="2pt"
                    android:paddingBottom="1pt">

                    <Button
                        android:id="@+id/bu_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:backgroundTint="#E63C3C"
                        android:text="لا"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        app:cornerRadius="20pt" />

                    <Button
                        android:id="@+id/bu_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4pt"
                        android:layout_weight="0"
                        android:backgroundTint="#50E64A"
                        android:text="نعم"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        app:cornerRadius="20pt" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>